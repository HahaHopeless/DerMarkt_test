  <body class="index-page">
    <!-- Navbar -->
    <%- include('./header.ejs') %>
    <!-- MAIN CONTENT HERE -->
    <div class="browse">
      <div
        class="sidebar"
        style="
          min-height: 100vh;
          border-radius: 1rem;
          border: solid 1.5px rgba(116, 125, 140, 0.1);
        "
      >
        <!--Simple Search-->

        <form action="/browse/search" method="GET">
        <div class="form-group">
          <input
            type="text"
            name="title"
            placeholder="Search"
            class="form-control"
            id="title"
            style="border-radius: 0.8rem"
          />
        </div>

        <!-- Checkboxes -->
        <div class="mb-3">
          <small class="text-uppercase font-weight-bold"
            >Product Category</small
          >
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="category" id="all" value="" checked>
          <label class="form-check-label" for="all">
            All Categories
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="category" id="electronics" value="electronics">
          <label class="form-check-label" for="electronics">
            Electronics
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="category" id="furniture" value="furniture">
          <label class="form-check-label" for="furniture">
            Furniture
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="category" id="automotive" value="automotive">
          <label class="form-check-label" for="automotive">
            Automotive
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="category" id="services" value="services">
          <label class="form-check-label" for="services">
            Services
          </label>
        </div>

        <!--PLZ Search-->
        <div class="mb-3">
          <small class="text-uppercase font-weight-bold">City</small>
        </div>
        <div class="form-group ">
          <input type="text" placeholder="City" name="city" class="form-control" style="
          border-radius: 1rem;
          border: solid 1.5px rgba(116, 125, 140, 0.1);" />
        </div>
        

        <div class="">
          <small class="text-uppercase font-weight-bold">Price</small>
        </div>
        <div class="form-group pricegroup">
          <input type="number"  name="minPrice" placeholder="Min" class="form-control" style="
          border-radius: 1rem;
          border: solid 1.5px rgba(116, 125, 140, 0.1);"/>
        </div>
        <div class="form-group pricegroup">
          <input type="number"  name="maxPrice" placeholder="Max" class="form-control" style="
          border-radius: 1rem;
          border: solid 1.5px rgba(116, 125, 140, 0.1);"/>
        </div>
        <br /><br /><br />
        <button
          style="padding: 10px"
          type="submit"
          class="btn btn-outline-primary pricegroup"
        >
          Search
        </button>
        <br /><br /><br /><br />
      </div>

    </form>
      <div class="body">
        <div class="productcards">
